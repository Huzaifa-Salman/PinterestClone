<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#121212">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Header with Profile Info -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/profile_picture"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:src="@drawable/ic_pinterest_logo"
                android:layout_marginRight="16dp"
                android:contentDescription="Profile Picture"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/profile_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Huzaifa"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="#FFFFFF"/>

                <TextView
                    android:id="@+id/profile_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="View profile"
                    android:textColor="#888888"
                    android:textSize="14sp"/>

            </LinearLayout>
        </LinearLayout>

        <!-- Settings List -->
        <TextView
            android:id="@+id/settings_header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Settings"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="8dp"/>

        <!-- Individual Settings Items -->
        <TextView
            android:id="@+id/account_management"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:text="Account management"
            android:textColor="#FFFFFF"
            android:background="?android:attr/selectableItemBackground"
            />

        <TextView
            android:id="@+id/profile_visibility"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:text="Profile visibility"
            android:textColor="#FFFFFF"
            android:background="?android:attr/selectableItemBackground"
            />

        <TextView
            android:id="@+id/home_feed_tuner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:text="Home feed tuner"
            android:textColor="#FFFFFF"
            android:background="?android:attr/selectableItemBackground"
             />

        <TextView
            android:id="@+id/notifications"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:text="Notifications"
            android:textColor="#FFFFFF"
            android:background="?android:attr/selectableItemBackground"
            />

        <TextView
            android:id="@+id/privacy_data"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:text="Privacy and data"
            android:textColor="#FFFFFF"
            android:background="?android:attr/selectableItemBackground"
            />

        <!-- Add more settings options here similarly -->

    </LinearLayout>
</ScrollView>


